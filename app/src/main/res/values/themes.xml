<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetitesAnnonces" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryVariant">@color/button</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>



    </style>
    <style name="TextAppearance.pa.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <!--<style name="TextView">
         TextView textView = (TextView) findViewById(); Typeface typeFace = Typeface.createFromAsset(getAssets(), ""); textView.setTypeface(typeFace);
    </style>-->

    <!-- Pour tout les bouttons -->
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- editText : ajout_annonce-->
    <style name="textEntre" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- editText : inscription et list annonce-->
    <style name="textInscription" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- editView : main et inscription-->
    <style name="textMain" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/text</item>
    </style>
    <!-- titres -->
    <style name="titreStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <!-- TextView : annonce-->
    <style name="textAnnonce" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- editText : main, user-->
    <style name="textUser" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text</item>>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
    <!-- editText : main, passeword-->
    <style name="textPasseword" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:drawableRight">@drawable/ic_eye</item>
    </style>







</resources>